
@{
  Layout = "_Layout";
}

@using Library.Models;
@using System.Collections.Generic;

@* @model List<Library.Models.Book>; *@

<h2>Search Results:</h2>

<p>Books</p>

@if (Model.Count == 0)
{
  <p> No results!</p>
} 
@if(Model[0].GetType() == typeof(Book))
{

@foreach(Book book in Model)
{
   <li>@Html.ActionLink($"{book.Title} " , "Details", new {id = book.BookId})</li>
}
}
else
{
@foreach(Author author in Model)
{
   <li>@Html.ActionLink($"{author.Name} " , "Details", new {id = author.AuthorId})</li>
}

}

